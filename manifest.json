{
  "manifest_version": 3,
  "name": "DexChat",
  "version": "1.0.0",
  "description": "Voice and text chat for DexScreener with tiered access",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["https://dexscreener.com/*", "https://dexchat.onrender.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dexscreener.com/solana/*"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}